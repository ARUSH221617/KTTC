
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Course {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String
  level       String
  duration    String
  instructor  String
  thumbnail   String
  popularity  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  certificates Certificate[]
}

model Certificate {
  id            String   @id @default(cuid())
  certificateNo String   @unique
  holderName    String
  courseId      String
  issueDate     DateTime
  isValid       Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  course Course @relation(fields: [courseId], references: [id])
}

model Testimonial {
  id        String   @id @default(cuid())
  name      String
  role      String
  content   String
  avatar    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
